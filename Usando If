public class Condicionales {
    public static void main(String[] args){
        int numero = 5;
        if (numero > 0){
            System.out.println ("numero es positivo");
            } else if (numero < 0){
            System.out.println("numero es negativo");}
            else if( numero == 0){
                System.out.println("numero es 0");
        }
      }
    }
